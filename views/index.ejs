<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blogs => { %>
                <h3 class="title"> <%= blogs.title %></h3>
                <p class="snippet"> <%= blogs.descr %></p>
                <a href="<%= blogs.url %>" target=”_blank” > <%= blogs.url %> </a>
            <% }) %>
        <% } else { %>
            <P>There are no blogs to display...</P>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>

</body>
</html>